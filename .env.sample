# .env.sample
# Скопіюйте цей файл як .env та заповніть свої значення
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
GEMINI_API_KEY=your-gemini-api-key
# Рекомендована модель: gemini-2.5-flash (безкоштовна)
GEMINI_MODEL=gemini-2.5-flash
# Мінімальні налаштування безпеки для більш вільного спілкування
GEMINI_ENABLE_SAFETY_OVERRIDE=true
BOT_PERSONA_NAME=Гряг
BOT_PERSONA_DESC=Дружелюбний та розумний помічник з легким гумором!
BOT_CONTEXT_LIMIT=1000
BOT_REPLY_TIMEOUT=10
ADMIN_ID=392817811
# Тег бота - буде @gryag_bot (не змінюйте)
# Налаштування рандомних відповідей  
BOT_RANDOM_REPLY_CHANCE=0.25
# Максимальний розмір контексту для Gemini (символи) - ЗАСТАРІЛИЙ ПАРАМЕТР
BOT_MAX_CONTEXT_SIZE=10000
# === НОВІ ПАРАМЕТРИ ДЛЯ GEMINI 2.5 FLASH (1M ТОКЕНІВ) ===
# Максимальна кількість токенів контексту (80% від 1M токенів)
BOT_MAX_CONTEXT_TOKENS=800000
# Оцінка символів для безпечного використання (~2M символів)
BOT_CONTEXT_CHAR_ESTIMATE=2000000
# Коефіцієнт токенів на символ для української мови
BOT_TOKENS_PER_CHAR=0.4
# Анти-спам налаштування
BOT_SMART_REPLY_CHANCE=0.04
BOT_MIN_SILENCE_MINUTES=25
BOT_MAX_REPLIES_PER_HOUR=2
BOT_TRIGGER_KEYWORDS=гряг,@gryag_bot,грягік,бот
# Автономна поведінка  
BOT_AUTONOMOUS_MODE=true
BOT_SPONTANEOUS_CHANCE=0.008
# Реакції на повідомлення
BOT_REACTION_CHANCE=0.05
BOT_REACTION_ON_MENTIONS=true
# Автоматичне сканування історії чату
BOT_AUTO_SCAN_HISTORY=true
BOT_MAX_HISTORY_SCAN=500
# Ігнорування старих повідомлень коли бот був оффлайн
BOT_IGNORE_OLD_MESSAGES=true
BOT_MAX_MESSAGE_AGE_MINUTES=10
# Директорія для збереження даних
BOT_DATA_DIR=data