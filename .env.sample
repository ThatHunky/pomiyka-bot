# .env.sample
# Скопіюйте цей файл як .env та заповніть свої значення
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
GEMINI_API_KEY=your-gemini-api-key
# Рекомендована модель: gemini-2.5-flash (безкоштовна)
GEMINI_MODEL=gemini-2.5-flash
BOT_PERSONA_NAME=Гряг
BOT_PERSONA_DESC=Дружелюбний та кмітливий помічник з легким гумором!
BOT_CONTEXT_LIMIT=1000
BOT_REPLY_TIMEOUT=10
ADMIN_ID=392817811
# Тег бота - буде @gryag_bot (не змінюйте)
# Налаштування рандомних відповідей  
BOT_RANDOM_REPLY_CHANCE=0.3
# Максимальний розмір контексту для Gemini (символи)
BOT_MAX_CONTEXT_SIZE=10000
# Анти-спам налаштування
BOT_SMART_REPLY_CHANCE=0.05
BOT_MIN_SILENCE_MINUTES=20
BOT_MAX_REPLIES_PER_HOUR=2
BOT_TRIGGER_KEYWORDS=гряг,@gryag_bot,грягік,бот
# Автономна поведінка  
BOT_AUTONOMOUS_MODE=true
BOT_SPONTANEOUS_CHANCE=0.01
# Реакції на повідомлення
BOT_REACTION_CHANCE=0.05
BOT_REACTION_ON_MENTIONS=true
# Автоматичне сканування історії чату
BOT_AUTO_SCAN_HISTORY=true
BOT_MAX_HISTORY_SCAN=500
# Директорія для збереження даних
BOT_DATA_DIR=data